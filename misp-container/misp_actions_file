name: Build and Push Docker Image

on:
  push:
    branches:
      - main

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout current repository
      uses: actions/checkout@v2

#    - name: Checkout external repository
#      uses: actions/checkout@v2
#      with:
#        repository: owner/repo-with-docker-compose
#        path: repo-with-docker-compose
#        token: ${{ secrets.GITHUB_TOKEN }}

    - name: Set up Docker Buildx
      uses: docker/setup-buildx-action@v3

    - name: Configure AWS credentials
      uses: aws-actions/configure-aws-credentials@v4 # More information on this action can be found below in the 'AWS Credentials' section
      with:
        role-to-assume: arn:aws:iam::891377055542:role/paul.hallam-dev
        aws-region: eu-west-2

    - name: Log in to Amazon ECR
      id: ecr-login
      uses: aws-actions/amazon-ecr-login@v4

    - name: Build and push Docker image
      run: |
#        curl --proto '=https' --tlsv1.2 -O https://raw.githubusercontent.com/NUKIB/misp/main/docker-compose.yml
        docker-compose -f https://raw.githubusercontent.com/NUKIB/misp/main/docker-compose.yml build
        docker tag repo-with-docker-compose_myservice:latest ${{ steps.ecr-login.outputs.registry }}/my-repo:latest
        docker push ${{ steps.ecr-login.outputs.registry }}/my-repo:latest

    - name: Logout from ECR
      run: docker logout ${{ steps.ecr-login.outputs.registry }}
